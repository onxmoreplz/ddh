<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140px"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".login.find.FindResultIdActivity">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="33dp"
            android:src="@drawable/icon_red_check_only" />

        <TextView
            android:id="@+id/tv_notice_result_id"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:gravity="center"
            android:text="함길동님의 아이디는\nhamgi*****@gmail.com 입니다"
            android:textSize="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_round_login"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:paddingTop="4dp"
                android:src="@drawable/icon_warning" />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:gravity="center_horizontal|center_vertical"
                android:paddingVertical="17dp"
                android:text="정보 보호를 위해 아이디의 일부만 보여집니다."
                android:textColor="#949494" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="45dp"
        android:layout_weight="1"
        android:background="@drawable/button_round_sign_up_enabled"
        android:text="로그인"
        android:textColor="@color/white" />

</LinearLayout>
